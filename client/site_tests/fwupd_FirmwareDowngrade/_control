AUTHOR = "Ricardo Canuelo <ricardo.canuelo@collabora.com>"
NAME = "fwupd_FirmwareDowngrade"
METADATA = {
    "contacts": ["ricardo.canuelo@collabora.com"],
    "author": "Ricardo Canuelo <ricardo.canuelo@collabora.com>",
    "criteria": "Make sure that a device firmware can be downgraded with fwupd."
}
PURPOSE = "Downgrades the firmware of a device to the previous version."
TIME = "SHORT"
TEST_CATEGORY = "General"
TEST_CLASS = "fwupd"
TEST_TYPE = "client"
PY_VERSION = 3
ATTRIBUTES = "suite:fwupd_downgrade"

DOC = """
Downgrades the firmware of a device to the previous version. The device
is supposed to be working and updatable, and fwupd is expected to work
normally. Exceptional cases are treated as test errors.
"""

# Argument 'device_id' is mandatory. It can be the fwupd instance id of
# the device or any of its GUIDs
args_dict = utils.args_to_dict(args)
try:
    device_id = args_dict.get('device_id', device_id)
except NameError:
    device_id = args_dict.get('device_id', '')
job.run_test('fwupd_FirmwareDowngrade', device_id=device_id)
