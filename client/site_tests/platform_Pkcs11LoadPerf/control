AUTHOR = "Chromium OS Authors"
NAME = "platform_Pkcs11LoadPerf"
PURPOSE = "Tests the performance of loading a PKCS #11 token."
CRITERIA = "Fails if performance does not meet constraints."
SUITE = "regression"
TIME = "SHORT"
TEST_CATEGORY = "Performance"
TEST_CLASS = "platform"
TEST_TYPE = "client"

DOC = """
This tests the performance of loading a PKCS #11 token.
"""

job.run_test('platform_Pkcs11LoadPerf',
             iterations=3,
             constraints=['cert_ready_ms < 1500', 'key_ready_ms < 3000'])
