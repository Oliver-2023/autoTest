AUTHOR = "jwerner, chromeos-power"
NAME = "power_SuspendStress.videoDaily"
#SUITE = "jailed_daily"
PURPOSE = "Run repeated iterations of suspend/resume while rendering a video."
TIME = "LENGTHY"
TEST_CATEGORY = "Functional"
TEST_CLASS = "power"
TEST_TYPE = "client"
EXPERIMENTAL = "True"

DOC = """
Runs one hour of suspend/resume cycles in the background of video output.
"""

job.parallel([lambda: job.run_test('power_SuspendStress', tag='videoDaily',
                                   duration=3600, init_delay=20, min_suspend=7,
                                   tolerated_aborts=4, breathing_time=10)],
             [lambda: job.run_test('graphics_SanAngeles',
                                   creds='$default', iterations=25,
                                   tag='power_SuspendStress')])
