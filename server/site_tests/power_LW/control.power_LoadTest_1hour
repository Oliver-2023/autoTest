AUTHOR = "puthik"
NAME = "power_LW.power_LoadTest_1hour"
METADATA = {
    "contacts": ["chromeos-platform-power@google.com"],
    "bug_component": "b:167191",
    "criteria": "This test is a power benchmark test.",
    "hw_agnostic": False,
    "doc" : "Control file for running power_LoadTest in power lab.",
}
TIME = "LONG"
TEST_CATEGORY = "Benchmark"
TEST_CLASS = "power"
TEST_TYPE = "server"
ATTRIBUTES = "suite:power_dashboard"
PY_VERSION = 3

from autotest_lib.client.common_lib import utils

args_dict = utils.args_to_dict(args)
test = 'power_LoadTest'
args = {
    'pdash_note': args_dict.get('pdash_note', ''),
    'tag' : '1hour_PLW',
    'loop_time' : 3600,
    'loop_count' : 1,
    'test_low_batt_p' : 6,
}

def run(machine):
    host = hosts.create_host(machine)
    job.run_test("power_LW", host=host, test=test, args=args,
                 machine=machine, tag=NAME.split('.')[1])

parallel_simple(run, machines)
