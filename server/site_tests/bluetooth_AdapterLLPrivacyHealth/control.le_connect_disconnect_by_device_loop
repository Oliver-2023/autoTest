from autotest_lib.server import utils

AUTHOR = 'chromeos-bluetooth'
NAME = 'bluetooth_AdapterLLPrivacyHealth.le_connect_disconnect_by_device_loop'
PURPOSE = ('Batch of Bluetooth LE health tests with LL privacy turned on')
CRITERIA = 'Pass all health test'
ATTRIBUTES = 'suite:bluetooth_flaky'
TIME = 'MEDIUM'
TEST_CATEGORY = 'Functional'
TEST_CLASS = 'bluetooth'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth_state:NORMAL, working_bluetooth_btpeer:1'
PY_VERSION = 3

DOC = """ Tests connection and disconnection by the device in a loop."""

args_dict = utils.args_to_dict(args)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLLPrivacyHealth', host=host,
                 num_iterations=1, args_dict=args_dict,
                 test_name=NAME.split('.')[1])

parallel_simple(run, machines)
