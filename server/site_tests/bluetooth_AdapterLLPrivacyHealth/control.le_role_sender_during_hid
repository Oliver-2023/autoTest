from autotest_lib.server import utils

AUTHOR = 'chromeos-bluetooth'
NAME = 'bluetooth_AdapterLLPrivacyHealth.le_role_sender_during_hid'
PURPOSE = ('Tests controller can perform Sender role while already connected'
           ' to a HID device with LL privacy turned on')
CRITERIA = 'Pass the test'
ATTRIBUTES = 'suite:bluetooth_flaky'
TIME = 'SHORT'
TEST_CATEGORY = 'Functional'
TEST_CLASS = 'bluetooth'
TEST_TYPE = 'server'
DEPENDENCIES = 'bluetooth, working_bluetooth_btpeer:2'
PY_VERSION = 3

DOC = """Tests Sender role capability during HID Use

      This test verifies that the DUT can handle the Sender role while already
      connected to a HID device.
      """

args_dict = utils.args_to_dict(args)

def run(machine):
    host = hosts.create_host(machine)
    job.run_test('bluetooth_AdapterLLPrivacyHealth', host=host,
                 num_iterations=1, args_dict=args_dict,
                 test_name=NAME.split('.')[1])

parallel_simple(run, machines)
