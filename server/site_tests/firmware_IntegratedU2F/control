from autotest_lib.server import utils

AUTHOR = "mruthven"
NAME = "firmware_IntegratedU2F"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "mruthven@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "Verify U2F"
}
ATTRIBUTES = "suite:faft_gsc_nightly, suite:faft_cr50_pvt, suite:faft_cr50_prepvt"
TIME = "SHORT"
TEST_TYPE = "server"
JOB_RETRIES = 0
DEPENDENCIES = "servo_state:WORKING"

DOC = """
Verify second-factor authentication (U2F) using the on-board cr50 firmware
works.

Run U2FTest on the DUT. Use servo to press the power button.
"""

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run(machine):
    host = hosts.create_host(machine, servo_args=servo_args)

    iterations = int(args_dict.get("iterations", 1))

    job.run_test("firmware_IntegratedU2F", host=host, cmdline_args=args,
                 iterations=iterations)

parallel_simple(run, machines)
