from autotest_lib.server import utils

AUTHOR = "jwerner"
NAME = "firmware_WriteProtect"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "jwerner@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "Servo based hardware write protect test",
        "requirements": ["sys-fw-0021-v01", "sys-fw-0024-v01"],
}
ATTRIBUTES = "suite:faft_bios, suite:faft_bios_ro_qual, suite:faft_bios_rw_qual, suite:faft_normal, suite:faft_lv1, suite:faft_bios_tot, suite:distributed_faft_bios_shard1"
DEPENDENCIES = "servo_state:WORKING"
TIME = "SHORT"
TEST_TYPE = "server"
JOB_RETRIES = 0

DOC = """
This is a simple test which toggles the hardware write-protect line via Servo
and checks that the correct state is reported by both firmware and kernel.
"""

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run_writeprotect(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test("firmware_WriteProtect", host=host, cmdline_args=args,
                 dev_mode=False, tag="normal")

parallel_simple(run_writeprotect, machines)
