AUTHOR = 'Chromium OS team'
NAME = 'tast.wificell-endtoend-flaky'
TIME = 'MEDIUM'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:wifi_endtoend_flaky'
MAX_RESULT_SIZE_KB = 1024 * 1024
PY_VERSION = 3

DOC = '''
Run unstable Tast tests for WiFi ui/e2e functions on suite:wifi_endtoend_flaky.

"group:wificell" indicates that the test runs on a wificell fixture. Its
sub-attributes:
  * "wificell_e2e_unstable": unstable tests that verify e2e/ui functions of wifi.

Tast is an integration-testing framework analagous to the test-running portion
of Autotest. See https://chromium.googlesource.com/chromiumos/platform/tast/ for
more information.

See http://go/tast-failures for information about investigating failures.
'''

def run(machine):
    job.run_test('tast',
                 host=hosts.create_host(machine),
                 test_exprs=['("group:wificell" && wificell_e2e_unstable)'],
                 ignore_test_failures=False, max_run_sec=10800,
                 command_args=args)

parallel_simple(run, machines)
