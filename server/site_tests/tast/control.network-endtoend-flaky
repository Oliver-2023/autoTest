AUTHOR = 'The ChromiumOS Authors'
NAME = 'tast.network-endtoend-flaky'
TIME = 'MEDIUM'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:network_endtoend_flaky'
MAX_RESULT_SIZE_KB = 1024 * 1024
PY_VERSION = 3

DOC = '''
Run the Tast tests for general network ui/e2e functions on suite:network_endtoend.
Tests in this group are usually not stable enough or valuable enough to be in the
mainline group.

"group:network" group of test that test general network functions. Its
sub-attributes:
  * "network_e2e_unstable": Unstable tests that verify e2e/ui functions of network.

Tast is an integration-testing framework analagous to the test-running portion
of Autotest. See https://chromium.googlesource.com/chromiumos/platform/tast/ for
more information.

See http://go/tast-failures for information about investigating failures.
'''

def run(machine):
    job.run_test('tast',
                 host=hosts.create_host(machine),
                 test_exprs=['("group:network" && network_e2e_unstable)'],
                 ignore_test_failures=False, max_run_sec=10800,
                 command_args=args)

parallel_simple(run, machines)
