AUTHOR = 'Chromium OS team'
NAME = 'tast.arc_playstore'
TIME = 'LONG'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:arc_playstore'
MAX_RESULT_SIZE_KB = 50 * 1024
PY_VERSION = 3
# tast.py uses binaries installed from autotest_server_package.tar.bz2.
REQUIRE_SSP = True
DOC = '''
Run the Tast Playstore test suite.
Tast is an integration-testing framework analagous to the test-running portion
of Autotest. See https://chromium.googlesource.com/chromiumos/platform/tast/ for
more information.
This runs the group of playstore functional tests after installing the dev version.
'''
def run(machine):
    job.run_test('tast',
                 host=hosts.create_host(machine),
                 test_exprs=['("group:arc" && arc_playstore)'],
                 max_run_sec=21600,
                 command_args=args)
parallel_simple(run, machines)