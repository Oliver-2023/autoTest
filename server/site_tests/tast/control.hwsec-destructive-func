NAME = 'tast.hwsec-destructive-func'
METADATA = {
    "contacts": ["cros-hwsec@google.com", "zuan@chromium.org"],
    "bug_component": "b:1188704",
    "criteria": ("Run the Tast test group hwsec_destructive in the suite"
                 "bvt-tast-informational"),
    "hw_agnostic": False
}
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:bvt-tast-informational'
MAX_RESULT_SIZE_KB = 1024 * 1024
JOB_RETRIES = 0  # Do not retry informational tests.

# tast.py uses binaries installed from autotest_server_package.tar.bz2.
REQUIRE_SSP = True

def run(machine):
    job.run_test('tast',
                 host=hosts.create_host(machine),
                 test_exprs=['("group:hwsec_destructive_func")'],
                 ignore_test_failures=True, max_run_sec=3*60*60,
                 command_args=args)

parallel_simple(run, machines)
