AUTHOR = 'ChromiumOS team'
NAME = 'tast.cq-minimal'
TIME = 'SHORT'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:cq-minimal'
MAX_RESULT_SIZE_KB = 50 * 1024
PY_VERSION = 3

# tast.py uses binaries installed from autotest_server_package.tar.bz2.
REQUIRE_SSP = True

DOC = '''
Run cq-minimal Tast tests.

Tast is an integration-testing framework analagous to the test-running portion
of Autotest. See https://chromium.googlesource.com/chromiumos/platform/tast/ for
more information.

This runs a group of cq-minimal tests.

The goal of these tests is to verify a build is bisectable and debuggable.
'''

def run(machine):
    job.run_test('tast',
                 host=hosts.create_host(machine), max_run_sec=10800,
                 test_exprs=['("group:cq-minimal" && !informational)'],
                 command_args=args,
                 clear_tpm=False)

parallel_simple(run, machines)
