AUTHOR = 'ChromeOS Graphics Team (chromeos-gfx@google.com)'
NAME = 'tast.graphics_satlab_redrix_stress_b246324780_dut3'
TIME = 'MEDIUM'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:graphics_satlab_redrix_stress_b246324780'

METADATA = {
    "contacts": [
        "chromeos-gfx@google.com"
    ],
    "bug_component": "b:885255",
    "criteria": "Test suite should run regularly"
