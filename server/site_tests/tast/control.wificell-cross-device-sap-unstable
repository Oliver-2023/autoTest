AUTHOR = 'chromeos-kernel-wifi@google.com'
NAME = 'tast.wificell-coss-device-sap-unstable'
TIME = 'MEDIUM'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:wifi_cross_device_sap'
MAX_RESULT_SIZE_KB = 1024 * 1024
PY_VERSION = 3

# tast.py uses binaries installed from autotest_server_package.tar.bz2.
REQUIRE_SSP = True

DOC = '''
Run Tast tests for basic SoftAP WiFi functions on suite:wifi_nearby.

"group:wificell_cross_device" indicates that the test runs on a nearbyshare
 fixture. Its sub-attributes:
  * "wificell_cross_device_sap": test WiFi SoftAP functionality.
  * "wificell_cross_device_unstable": the test is unstable or yet to be
                                      verified as stable.

Tast is an integration-testing framework analagous to the test-running portion
of Autotest. See https://chromium.googlesource.com/chromiumos/platform/tast/ for
more information.

See http://go/tast-failures for information about investigating failures.
'''

def run(machine):
    companions = hosts.create_companion_hosts(companion_hosts)
    job.run_test('tast',
                 host=hosts.create_host(machine),
                 test_exprs=['("group:wificell_cross_device" && '
                             'wificell_cross_device_sap && '
                             'wificell_cross_device_unstable)'],
                 ignore_test_failures=False, max_run_sec=10800,
                 companion_duts={'cd1':companions[0]},
                 command_args=args)

parallel_simple(run, machines)
