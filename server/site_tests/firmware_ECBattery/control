from autotest_lib.server import utils

AUTHOR = "ChromeOS Team"
NAME = "firmware_ECBattery"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "jbettis@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "Servo based EC battery status report test"
}
ATTRIBUTES = "suite:faft_ec, suite:faft_ec_fw_qual, suite:faft_ec_tot, suite:faft_smoke, suite:labqual, suite:distributed_lab_qual_faft"
TIME = "SHORT"
TEST_TYPE = "server"
JOB_RETRIES = 0
DEPENDENCIES = "ec:cros, servo_state:WORKING"

DOC = """
This test check battery status read from EC console and kernel sysfs match.
"""

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run_ecbattery(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test("firmware_ECBattery", host=host, cmdline_args=args,
                 disable_sysinfo=True)

parallel_simple(run_ecbattery, machines)
