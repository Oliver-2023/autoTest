from autotest_lib.server import utils

AUTHOR = "ChromeOS Team"
NAME = "firmware_ECLidShutdown"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "jbettis@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "Verify functionality of DUT with GBB_FLAG_DISABLE_LID_SHUTDOWN",
        "requirements": ["sys-fw-0022-v02"]
}
ATTRIBUTES = "suite:faft_ec, suite:faft_ec_fw_qual, suite:faft_ec_tot"
TIME = "SHORT"
TEST_TYPE = "server"
JOB_RETRIES = 0
DEPENDENCIES = "ec:cros, servo_state:WORKING"

DOC = """
This test checks the functionality of the disable lid shutdown GBB flag.
    - Verifies the device does shutdown when verified boot starts while the lid
      is closed and GBB_FLAG_DISABLE_LID_SHUTDOWN is disabled.
    - Verifies the device does not shutdown when verified boot starts while the
      lid is closed and GBB_FLAG_DISABLE_LID_SHUTDOWN is enabled.
"""

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run_eclidshutdown(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test("firmware_ECLidShutdown", host=host, cmdline_args=args,
                 disable_sysinfo=True)

parallel_simple(run_eclidshutdown, machines)
