from autotest_lib.server import utils

AUTHOR = "mruthven, apronin"
NAME = "firmware_Cr50ShortECC"
METADATA = {
        "contacts": ["chromeos-faft@google.com", "mruthven@chromium.org", "apronin@chromium.org"],
        "bug_component": "b:792402", # ChromeOS > Platform > Enablement > Firmware > FAFT
        "criteria": "This test uses trunks_client to verify that Cr50 can handle short ECC keys"
}
ATTRIBUTES = "suite:faft_gsc_nightly, suite:faft_cr50_pvt,suite:faft_cr50_prepvt, suite:faft_ti50_qual"
TIME = "SHORT"
TEST_TYPE = "server"

DOC = """
This test uses trunks_client to verify that Cr50 can handle short ECC keys.
"""

args_dict = utils.args_to_dict(args)
servo_args = hosts.CrosHost.get_servo_arguments(args_dict)

def run_test(machine):
    host = hosts.create_host(machine, servo_args=servo_args)
    job.run_test('firmware_Cr50ShortECC', host=host)

parallel_simple(run_test, machines)
